    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Server/Server.csproj"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn":["cleanapi"]
        },
        {
            "label": "cleanapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/Server/Server.csproj"
            ],
            "problemMatcher": "$msCompile"
        },

        {
            "label": "buildweb",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Client/Client.csproj"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn":["cleanweb"]
        },
        {
            "label": "cleanweb",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/Client/Client.csproj"
            ],
            "problemMatcher": "$msCompile"
        },

